{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "lib": ["es5", "dom", "es2015.core"],
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
