{
  "compilerOptions": {
    "module": "es6",
    "target": "es5",
    "declaration": true,
    "declarationDir": "./dist/",
    "outDir": "./dist/",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
